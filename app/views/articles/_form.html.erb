<%= form_with model: @article, local: true do |form| %>
 
    <% if @article.errors.any? %>
      <div id="error_explanation" class="alert alert-danger" role="alert">
        <h4>
          <%= pluralize(@article.errors.count, "error") %> prohibited
          this article from being saved:
        </h4>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <div class="form-group">
      <%= form.text_field :title, class: 'form-control', placeholder: 'Tire de l\'article' %>
    </div>
   
    <div class="form-group">
      <%= form.text_area :text , class: 'form-control', placeholder: 'Saisissez le contenu de votre article...'%>
    </div>
   
    <div class="form-group">
      <%= raw form.submit 'Valider', class: 'btn btn-success'%>
    </div>
   
  <% end %>