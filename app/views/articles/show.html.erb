<div class="row">
<div class="col-6 mx-auto">
<h2><%= @article.title %></h2>

<p>
  <%= @article.text %>
</p>

<hr>

<h4>Commentaires</h4>
<ul class="list-unstyled mb-5">
<%= render @article.comments %>
</ul>

<hr>

<h4>Ajouter un commentaire:</h4>
  <%= render 'comments/form' %>

<hr>

<%= link_to '<i class="fa fa-chevron-circle-left"></i> Retour'.html_safe, articles_path, class: 'btn btn-dark' %>
<%= link_to '<i class="fa fa-pencil"></i> Modifier'.html_safe, edit_article_path(@article), class: "btn btn-info" %>
</div>
</div>