<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
    <div class="form-group">
        <%= form.text_field :commenter, class: 'form-control', placeholder: 'Votre nom' %>
    </div>
    <div class="form-group">
        <%= form.text_area :body, class: 'form-control', placeholder: 'Saisissez votre commentaire ici...' %>
    </div>
    <div class="form-group">
        <%= form.submit 'Commenter', class: 'btn btn-success' %>
    </div>
<% end %>